{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "cosmosDbName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Cosmos DB instance."
            },
            "defaultValue": "[concat('cd-', uniqueString(resourceGroup().name))]"
        },
        "databaseName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Cosmos DB database."
            },
            "defaultValue": "[uniqueString(resourceGroup().name)]"
        },
        "collectionName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Cosmos DB collection."
            },
            "defaultValue": "[uniqueString(resourceGroup().name)]"
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location to place the resources."
            },
            "defaultValue": "[resourceGroup().location]"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "name": "[parameters('cosmosDbName')]",
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "apiVersion": "2015-04-08",
            "location": "[parameters('location')]",
            "tags": {
            },
            "kind": "GlobalDocumentDB",
            "properties": {
                "consistencyPolicy": {
                    "defaultConsistencyLevel": "Eventual",
                    "maxStalenessPrefix": 1,
                    "maxIntervalInSeconds": 10
                },
                "locations": [
                    {
                        "locationName": "[parameters('location')]",
                        "failoverPriority": 0
                    }
                ],
                "databaseAccountOfferType": "Standard",
                "enableAutomaticFailover": true
            }
        },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/apis/databases",
            "name": "[concat(parameters('cosmosDbName'), '/sql/', parameters('databaseName'))]",
            "apiVersion": "2016-03-31",
            "dependsOn": [
                "[resourceId('Microsoft.DocumentDB/databaseAccounts/', parameters('cosmosDbName'))]"
            ],
            "properties": {
                "resource": {
                    "id": "[parameters('databaseName')]"
                },
                "options": {
                    "throughput": "800"
                }
            }
        },
        {
            "type": "Microsoft.DocumentDb/databaseAccounts/apis/databases/containers",
            "name": "[concat(parameters('cosmosDbName'), '/sql/', parameters('databaseName'), '/', parameters('collectionName'))]",
            "apiVersion": "2016-03-31",
            "dependsOn": [
                "[resourceId('Microsoft.DocumentDB/databaseAccounts/apis/databases', parameters('cosmosDbName'), 'sql', parameters('databaseName'))]"
            ],
            "properties": {
                "resource": {
                    "id": "[parameters('collectionName')]",
                    "partitionKey": {
                        "paths": [
                            "/Event"
                        ],
                        "kind": "Hash"
                    }
                }
            }
        }
    ],
    "outputs": {
    },
    "functions": [
    ]
}